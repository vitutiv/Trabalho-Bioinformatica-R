setwd("C:/Users/jterr/Documents/USP trabalhos/FIgenomica/Trabalho-Bioinformatica-R")
lista <- list.files(pattern="filtro")
datalist = lapply(lista, function(x)read.table(x, skip=5, header=T)) 
datafr = do.call("rbind", datalist) 
plot( x=datafr$Wavelength.nm., y=datafr$Intensity, xlab = "comprimento de onda(nm)", ylab = "intensidade") 
lines(x=datafr$Wavelength.nm., y=datafr$Intensity, xlab = "comprimento de onda(nm)", ylab = "intensidade", col="red") 
